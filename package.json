{
  "name": "linux-system-dashboard",
  "version": "1.0.9",
  "description": "Ein modernes System-Dashboard für Linux Arch mit praktischen Features und Lernmöglichkeiten",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-appimage": "electron-builder --linux AppImage",
    "build-deb": "electron-builder --linux deb",
    "dist": "electron-builder --publish=never",
    "dist-linux": "electron-builder --linux --publish=never",
    "install-system": "./setup.sh",
    "uninstall-system": "./uninstall.sh",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "linux",
    "dashboard",
    "system",
    "monitor",
    "arch"
  ],
  "author": {
    "name": "Avacon00",
    "url": "https://schuttehub.de"
  },
  "homepage": "https://github.com/Avacon00/linux-system-dashboard",
  "repository": {
    "type": "git",
    "url": "https://github.com/Avacon00/linux-system-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/Avacon00/linux-system-dashboard/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.4",
    "sudo-prompt": "^9.2.1",
    "systeminformation": "^5.21.7"
  },
  "build": {
    "appId": "com.linuxdashboard.app",
    "productName": "Linux System Dashboard",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "auto-updater.js",
      "index.html",
      "styles.css",
      "assets/",
      "node_modules/"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "System",
      "synopsis": "Modernes System-Dashboard für Linux",
      "description": "Ein benutzerfreundliches System-Monitoring-Tool für Linux mit Echtzeit-Metriken, Paket-Management und Sicherheits-Features.",
      "desktop": {
        "Name": "Linux System Dashboard",
        "Comment": "System-Monitoring und -Verwaltung",
        "Categories": "System;Monitor;Utility;",
        "Keywords": "system;monitor;dashboard;linux;performance;"
      },
      "icon": "assets/icon-512.png"
    },
    "appImage": {
      "license": "LICENSE"
    },
    "deb": {
      "depends": ["gconf2", "gconf-service", "libnotify4", "libappindicator1"]
    }
  }
}
